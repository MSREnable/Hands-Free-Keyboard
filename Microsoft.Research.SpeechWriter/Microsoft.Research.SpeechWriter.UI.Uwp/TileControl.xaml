<UserControl x:Name="userControl"
    x:Class="Microsoft.Research.SpeechWriter.UI.Uwp.TileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Margin="5,2"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border>
        <Border BorderBrush="Black" BorderThickness="{Binding InternalBorder, ElementName=userControl, Mode=oneway}" Background="{Binding Background, ElementName=userControl}">
            <TextBlock Text="{Binding Caption, ElementName=userControl, Mode=OneWay}" FontSize="25" FontWeight="Bold" Margin="7,0" Foreground="Black"/>
        </Border>
    </Border>
</UserControl>
