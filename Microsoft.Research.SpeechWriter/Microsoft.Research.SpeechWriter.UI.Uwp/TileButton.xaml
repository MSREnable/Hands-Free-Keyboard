<UserControl
    x:Name="TheControl"
    x:Class="Microsoft.Research.SpeechWriter.UI.Uwp.TileButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.Research.SpeechWriter.UI.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lib="using:Microsoft.Research.SpeechWriter.Core.Items"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </UserControl.Resources>

    <Button x:Name="TheButton" MinHeight="100" MinWidth="100" Margin="5" HorizontalAlignment="Center" Content="{Binding Item, ElementName=TheControl}" Command="{Binding Item, ElementName=TheControl}" />
</UserControl>
