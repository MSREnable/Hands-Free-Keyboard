<UserControl x:Class="Microsoft.Research.SpeechWriter.UI.Wpf.TileButton"
             x:Name="TheControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.Research.SpeechWriter.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Microsoft.Research.SpeechWriter.UI.Wpf;component/TemplateDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Button MinHeight="100" MinWidth="100" Margin="5" HorizontalAlignment="Center" 
                Content="{Binding Item, ElementName=TheControl}" 
                Command="{Binding Item, ElementName=TheControl}"
                Opacity="{Binding Item, ElementName=TheControl, Converter={StaticResource TemplateOpacityConverter}}" Focusable="False"/>
    </Grid>
</UserControl>
